---
import SEO from '../components/SEO.astro';
import { ThemeProvider } from '../components/ui/ThemeProvider';

interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
}

const { title, description, image, article } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO title={title} description={description} image={image} article={article} />
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors">
    <ThemeProvider client:load>
      <slot />
    </ThemeProvider>
  </body>
</html>