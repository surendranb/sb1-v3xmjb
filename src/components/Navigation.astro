---
import ThemeToggle from './ThemeToggle';

const links = [
  { href: '/', text: 'Home' },
  { href: '/writing', text: 'Writing' },
  { href: '/projects', text: 'Projects' },
  { href: '/notes', text: 'Notes' },
];
---

<nav class="fixed top-0 w-full bg-white/90 dark:bg-gray-900/90 backdrop-blur-sm z-50 border-b border-gray-200 dark:border-gray-800">
  <div class="max-w-4xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="font-serif text-xl text-primary dark:text-primary-light hover:text-primary-light dark:hover:text-primary transition-colors">JD</a>
      <div class="flex items-center space-x-8">
        <ul class="flex space-x-8">
          {links.map(link => (
            <li>
              <a 
                href={link.href} 
                class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary-light transition-colors relative group"
              >
                {link.text}
                <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary dark:bg-primary-light transition-all group-hover:w-full"></span>
              </a>
            </li>
          ))}
        </ul>
        <ThemeToggle client:load />
      </div>
    </div>
  </div>
</nav>